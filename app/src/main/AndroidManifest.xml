<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hjy.com.red_book_community">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity
            android:name=".user.activity.LoginActivity"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".user.activity.RegisterActivity"
            android:label="@string/title_activity_register"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".community.activity.MenuActivity"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".community.activity.RecordActivity"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".community.activity.HomeActivity"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".community.activity.ContentActivity" >
        </activity>
        <activity android:name=".user.activity.InfoActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">

        </activity>
        <activity android:name=".community.activity.EditActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">

        </activity>
    </application>

</manifest>